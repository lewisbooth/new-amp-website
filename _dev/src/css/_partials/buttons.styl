
// Button with fancy gradient border
.button-1
    display inline-flex
    align-items center
    font-family 'Montserrat Regular', Helvetica, Tahoma, sans-serif
    font-size 1.5rem
    color #000000
    line-height 1
    position relative
    height 3em
    padding 0 1.8em
    text-align left
    background lightGrey
    background-clip padding-box
    border 4px solid transparent
    border-radius 2em
    border-image-slice 1

    :after
        position absolute
        top -3px
        right -3px
        bottom -3px
        left -3px
        background linear-gradient(to right, ampBlue, ampPink)
        content ''
        z-index -1
        border-radius 2em

    span
        img
            width 12px
            margin-left 10px


