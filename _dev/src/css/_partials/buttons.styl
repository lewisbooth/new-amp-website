
// Button with fancy gradient border
.button-1
    display inline-flex
    align-items center
    font-family 'Montserrat Regular', Helvetica, Tahoma, sans-serif
    font-size 1.5rem
    color #000000
    line-height 1
    position relative
    height 3em
    padding 0 1.8em
    text-align left
    background lightGrey
    background-clip padding-box
    border 4px solid transparent
    border-radius 2em
    border-image-slice 1

    :after
        position absolute
        top -3px
        right -3px
        bottom -3px
        left -3px
        content ''
        border-radius 2em
        transition all .3s ease-in-out
        background linear-gradient(to right, ampBlue, ampPink)
        z-index -1 
        filter blur(0)

    span
        img
            margin-left 10px
            transition all .2s linear
            width 1.2rem

.button-1:hover

    span
        img
            transform translateX(5px)


// Footer variation of button with fancy gradient border
.button-1.dark
    color #ffffff
    background darkGrey
    background-clip padding-box


