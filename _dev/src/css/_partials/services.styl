.service-header
    background darkGrey
    text-align center
    display flex
    align-content center
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

    h1, .sub-header
        text-align center
        animation fadeInUp 1.2s ease-out forwards
        opacity 0

    h1
        max-width 830px
        margin-bottom 0

        a 
            color ampPink
            position relative
            
        a:after
            position absolute
            content ''
            height 2px
            background ampPink
            bottom -0.5rem
            opacity 0
            left 0
            right 0
            transition all .2s ease-out

        span.margin-left
            margin-left -0.2em

.our-services .service, .our-values .service
    display flex

    &-text-wrapper
        position relative
        width 43%
        height 750px
        display flex
        align-items center
        justify-content center

    &-image
        width 57%
        height 750px
        background-repeat no-repeat
        background-size cover
        background-position center center

        &.image-1
            background-image url('/assets/img/services-image-production.jpg')

        &.image-2

            background-image url('/assets/img/services-web-design.jpg')

        &.image-3
            background-image url('/assets/img/services-brand-strategy.jpg')

    &-text
        display inline-flex
        flex-direction column
        align-items flex-start
        padding 0 40px

        h2
            font-size 2.8rem

        p
            max-width 530px
            margin 1em 0 1.8em

        .line-break
            margin 5em 0 3.5em

        li
            color greyMedium
            font-family montserratRegular
            font-size 1.6rem
            line-height 2

            &:first-child
                color darkGrey
                font-family montserratSemiBold

    &-text-bg
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background lightGrey
        z-index -1

.service-testimonials
    background #ffffff

    &-title
        margin-bottom 3rem

    &-wrapper
        display flex
        justify-content space-between

        .testimonial
            display flex
            flex-direction column
            align-items center
            justify-content center
            width calc((100% - 50px) / 3)
            border 1px solid lineGrey
            padding 5em 0

            img
                width 50px
                height 50px

            p
                font-size 1.7rem
                margin 1.5em 30px
                text-align center

            a
                color ampPink





// Hover effects
@media screen and (min-width: breakpoint1200)
    
    .service-header h1
        visibility hidden

        & > *
            visibility visible

        & > *
            transition opacity 200ms linear 100ms

        &:hover > span
            opacity 0.25

        a:hover:after
            bottom 0
            opacity 1


@media screen and (max-width: breakpoint1200)

    .our-services .service, .our-values .service

        &-text-wrapper
            height 700px

        &-image
            height 700px


@media screen and (max-width: breakpoint960)

    .our-services .service, .our-values .service
        flex-direction column

        &-text-wrapper
            width 100%
            height auto
            padding 6em 0
            order 1

        &-image
            width 100%
            height 500px

        &-text
            padding 0 20px

    .service-testimonials

        &-wrapper
            flex-direction column

            .testimonial
                width 100%
                margin-bottom 20px

                &:last-child
                    margin-bottom 0

                p
                    max-width 500px

                img
                    width 35px
                    height 35px


@media screen and (max-width: breakpoint600)

    .our-services .service, .our-values .service

        &-image
            height 300px

        &-text-wrapper
            padding 4em 0

        .line-break
            margin 4.5em 0 2.5em 

    .service-testimonials

        &-title
            margin-bottom 20px

        &-wrapper

            .testimonial
                padding 4em 0

                p
                    font-size 2rem


@media screen and (max-width: breakpoint375)

    .our-services .service, .our-values .service

        &-image
            height 220px

    .service-testimonials

        &-title
            text-align center

        &-wrapper

            .testimonial

                p
                    margin 1.5em 20px