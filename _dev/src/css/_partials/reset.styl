html
  font-size 10px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  padding 0
  margin 0

body
  margin 0
  font-size 10px

h1, h2, h3, h4, h5, h6, p
  margin 0
  font-weight normal

a, li, button
  text-decoration none
  list-style none
  outline none
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);

  a:hover, a:focus
    outline none
    border none

a:focus, input, textarea
  outline none

img, svg
  display block
  width 100%
  border 0

ul
  padding-left 0