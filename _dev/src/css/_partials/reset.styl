html
  font-size 10px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  padding 0
  margin 0

body
  margin 0
  font-size 1.8rem
  color $richBlack

a, li
  text-decoration none
  list-style none

img, svg
  display block
  width 100%
  border 0

ul
  padding-left 0

@media(max-width: $breakpointLarge)
  html
    font-size 9px

@media(max-width: $breakpointMedium)
  html
    font-size 8.5px