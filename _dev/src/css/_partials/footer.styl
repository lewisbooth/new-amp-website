footer
    position relative

.footer-bg
    position absolute
    top 0
    width 100%
    height 100%
    background darkGrey
    z-index -2

.footer-info
    display flex
    align-items center
    justify-content space-between
    padding 8em 0
    margin 0 auto
    max-width calc((100% / 12) * 8)

    &-cta
        display flex
        flex-direction column
        align-items center
        justify-content center

        h2
            font-size 3.4rem
            color #ffffff
            margin-bottom 3rem

    &-navigation

        h3, p
            color #ffffff

        p
            margin 3rem 0 4rem
            line-height 1.6

    &-navigation-social
        display flex
        align-items flex-end


        img
            max-width 25px
            max-height 24px
            margin-right 2.5em
            
        :last-child
            margin-right 0

.footer-break
    width 100%
    height 1px
    border-bottom 1px solid greyMedium

.footer-copyright
    display flex
    align-items center
    justify-content space-between
    padding 3em 0

    img
        width 110px

    &-links
        display flex
        align-items baseline

        p  
            font-family montserratRegular
            font-size 1.6rem
            color #9B9B9B
            margin-right 5em

        a, span
            font-family montserratRegular
            font-size 1.6rem
            color #ffffff

        span
            margin 0 1rem
            color greyMedium


@media screen and (max-width: breakpoint1200)

    .footer-info
        max-width 85%


@media screen and (max-width: breakpoint800)

    .footer-info
        width auto
        max-width 100%
        flex-direction column
        padding 6em 0

        &-cta
            margin-bottom 6em

        &-navigation
            text-align center

        &-navigation-social
            display inline-flex

    .footer-copyright
        flex-direction column

        img
            margin-bottom 20px
            max-width 75px

        &-links
            p
                margin-right 2em


@media screen and (max-width: 450px)

    .footer-info

        &-cta

            h2
                font-size 3rem
                text-align center

    .footer-copyright

        &-links
            flex-wrap wrap
            justify-content center
            text-align center

            p
                width 100%
                margin-bottom 0.5em
