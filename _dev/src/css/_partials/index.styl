.latest-work
    padding-top 13em
    background-color #ffffff
    position relative
    z-index 1
    animation fadeIn 1.2s ease-out

    &-header
        position absolute
        top -13em
        transform translateY(-100%)
        z-index 99
        padding-right 20px

        h1, .sub-header
            text-shadow 0 0 15px title-shadow

        .sub-header, .button-2 span
            font-family montserratMedium

    &-title
        display flex
        align-items baseline
        justify-content space-between
        margin-bottom 3rem

    &-container
        display flex
        justify-content space-between
        flex-wrap wrap
    
    &-post
        width calc(50% - 10px)
        background #000000
        position relative
        flex-basis 1
        margin 10px 0
        animation fadeIn 1.2s ease-in-out forwards
        opacity 0

        &-wrapper-top
                position absolute
                width 100%
                height 100%
                z-index 2


.service-list
    background #ffffff

    &-title

        p
            font-size 3.6rem
            font-family IBMPlexSerifSemiBold
            line-height 1.3
            font-weight normal
            color #9E9E9E
            margin-left calc(1400px / 12)

            :last-child
                color #C2C2C2

    &-container
        display flex
        align-items center
        justify-content space-between
        padding 0 calc(1400px / 12)

    &-category
        position relative

        h3
            margin-bottom 1.5em
            line-height 1

        p
            line-height 2

        .text-link
            margin-top 2.2em

            img
                transition all .2s linear

    &-wrapper
        position absolute
        top 0
        bottom 0
        width 100%

    .service-list-wrapper:hover + a img
        transform translateX(5px)

.blog-feed
    background darkGrey

    &-title
        display flex
        align-items baseline
        justify-content space-between
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale

        h2
            color #ffffff
            margin-bottom 3rem

    &-container
        display flex
        align-items center
        justify-content space-between

    &-post
        position relative
        width calc((100% - 40px) / 3)
        display flex
        flex-direction column
        justify-content center
        align-items center
        background ampBlueBlog
        padding-bottom 2em

        img
            max-width 320px

        &:nth-child(odd)
            background ampPinkBlog
        
    &-post-wrapper
        position absolute
        width 100%
        height 100%
        z-index 99
        top 0
        

.social-feed
    background #ffffff

    &-title
        display flex
        align-items center
        justify-content space-between
        margin-bottom 3rem
        
        img
            max-width 30px
            margin-right 1.5em
            flex-grow 1

        // Reset link arrow margin
        img.social-arrow
            margin-right 0 !important

        h3
            display inline-flex
            align-items center
            font-family IBMPlexSerifSemiBold
            font-size 2.2rem
            line-height 1

    &-title-text
        display flex
        align-items baseline
        justify-content space-between
        flex-grow 2
    
    &-instagram-wrapper
        display flex
        justify-content space-between
        align-items center
        width 100%

    &-instagram-post
        width 215px
        background lightGrey
        
        img 
            width 100%
            height 100%

    &-other
        display flex
        align-items center
        justify-content space-between
        
    &-twitter, &-twitter-title, &-cta
        width calc(50% - 25px)

    &-twitter-wrapper
        width 100%
        height 370px
        display flex
        flex-direction column
        justify-content space-between

    &-twitter-post
        background lightGrey
        width 100%
        height calc(50% - 10px)
        display flex
        flex-direction column
        justify-content center
        box-sizing border-box
        padding 0 6em
        position relative

        a {
            position absolute 
            width 100%
            height 100%
            top 0
            left 0
        }

        p
            font-size 1.8rem
            margin-top 1.5rem
            overflow hidden
            text-overflow ellipsis
            display -webkit-box
            -webkit-box-orient vertical
            -webkit-line-clamp 2
            line-height: 3rem
            max-height: 6rem

    &-cta
        background linear-gradient(to top right, ampBlue, ampPink)
        height 370px
        display flex
        align-items center
        justify-content center
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale

    &-cta-wrapper
        display flex
        flex-direction column
        align-items center
        justify-content center

        h2
            color #ffffff
            font-size 3.4rem

        .button-2
            margin 2em 0 2.2em

    &-cta-details
        text-align center

        h3, p
            color #ffffff

        h3 
            line-height 1.5

        p
            font-family montserratRegular
            font-size 1.8rem
            line-height 1.8


// Hover effects
@media screen and (min-width: breakpoint1200)

    .latest-work

        &-post

            h2, p
                color #ffffff
                -webkit-font-smoothing antialiased
                -moz-osx-font-smoothing grayscale
            
            p
                margin-top 5px

            &-wrapper-top

                &:hover + div

                    .latest-work-post-wrapper-bottom
                        opacity 0.8

                    .latest-work-post-hover-title
                        animation slideIn25 .3s ease-out
                        display block
                        opacity 1

                    span
                        animation slideIn100 .3s ease-out
                        display flex
                        opacity 1


            &-hover
                position absolute
                width 100%
                height 100%
                display flex
                justify-content center
                align-items center
                z-index 1

                &-title
                    margin-right 4em
                    animation slideOut25 .3s ease-in
                    transition all .3s linear
                    opacity 0

                span
                    width 30px
                    height 30px
                    border-radius 100%
                    display flex
                    align-items center
                    justify-content center
                    background #ffffff
                    opacity 0
                    transition all .3s linear
                    animation slideOut100 .3s ease-in

                    img
                        width 12px

            &-wrapper-bottom
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                background #000000
                z-index -1
                opacity 0
                transition opacity .2s ease-in

    
    .social-feed-instagram-wrapper, .blog-feed-container
        visibility hidden

        & > *
            visibility visible
            transition all .2s ease-in-out
            will-change transform

        &:hover > *
            opacity 0.4
            transform scale(0.95)

        & > *:hover
            opacity: 1
            transform scale(1)


/* Index media queries */
@media screen and (max-width: breakpoint1400)

    .service-list

        &-title

            p
                font-size 3.2rem
                margin-left 0

                :last-child
                    color #C2C2C2

        &-container
            padding 0

    .social-feed

        &-instagram-post
            width 185px

        &-twitter-post
            padding 0 4em

        &-twitter, &-twitter-title, &-cta
            width calc(50% - 10px)


@media screen and (max-width: breakpoint1200)

    /* Header Margin */
    .latest-work
        padding-top 8em

        &-header
            top -9em

    .blog-feed

        img
            max-width 90%

    .social-feed

        &-instagram-post
            width 145px

        &-twitter-post
            padding 0 3em

            h3
                font-size 1.7rem


@media screen and (max-width: breakpoint960)

    .service-list

        &-title

            p
                font-size 3rem
                color greyMedium

                :last-child
                    color greyMedium

        &-container
            justify-content flex-start

            .button-3
                margin-top 4rem

        &-category
            display none

    .social-feed

        &-instagram-post
            width calc((100vw - 80px) / 6)
            height calc((100vw - 80px) / 6)


@media screen and (max-width: breakpoint800)

    .blog-feed

        &-container
            flex-direction column
            align-items flex-start

        &-post
            width 100%
            padding 0 2em 2em
            box-sizing border-box

            img
                max-width 320px
            
        &-post:nth-child(-n+2)
            margin-bottom 20px

    .social-feed
        padding-bottom 20px

        &-other
            flex-direction column

        &-twitter, &-twitter-title, &-cta
            width 100%

        &-twitter-wrapper, &-cta
            height auto

        &-twitter-post
            height auto
            padding 4em 20px
            margin-bottom 20px

            h3
                line-height 1.6

        &-cta
            box-sizing border-box
            padding 6em 20px
            

@media screen and (max-width: breakpoint600)

    /* Header Margin */
    .latest-work
        background-color #ffffff
        position relative
        z-index 1

        &-title
            margin-bottom 20px

        &-header
            position relative
            transform none
            top 0
            padding-bottom 8em

            h1, .sub-header
                text-shadow none
                color darkGrey

        .button-2
            color darkGrey
            border 3px solid darkGrey

        &-container
            flex-direction column
            
        &-post
            width 100%
            margin 0

        &-post:first-child
            margin-bottom 20px

    .service-list

        &-title

            p
                font-size 2.8rem

    .blog-feed
        padding-bottom 20px

        &-title
            margin-bottom 20px

            h2
                margin-bottom 0

    .social-feed

        .line-break
            display none

        &-title
            margin-bottom 20px

        &-instagram
            margin-bottom 6em

        &-instagram-wrapper
            flex-wrap wrap

        &-instagram-post
            width calc((100% / 3) - 3px)
            margin-right 3px

        &-instagram-post:nth-child(-n+3)
            margin-bottom 3px


// Just for twitter post line width and cta in social feed
.show-450
    display none

@media screen and (max-width: 450px)

    .show-450
        display block

    .social-feed

        &-cta

            h2
                font-size 3rem
                text-align center


@media screen and (max-width: breakpoint375)

    /* Header Margin */
    .latest-work
        padding-top 6em

        &-header
            padding-bottom 6em

    .social-feed

        &-title

            img
                max-width 20px
                margin-right 0.8em


        
