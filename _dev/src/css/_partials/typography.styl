@media screen and (max-width: breakpoint960)

	h1
		font-size 3.6rem

@media screen and (max-width: breakpoint600)

	h1, h2
		font-size 3.2rem


@media screen and (max-width: breakpoint375)

	h1
		font-size 3rem

	h2
		font-size 2.6rem !important