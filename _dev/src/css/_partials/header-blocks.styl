/* Top of the page header blocks */

/* Header 1 */
section.header-1
    width 100%
    min-height 400px
    height calc(100vh - 13em)
    position fixed
    top 0
    z-index -5

.scroll-down-button
    position absolute
    top -25px
    left calc(50% - 25px)
    display flex
    align-items center
    justify-content center
    width 50px
    height 50px
    background-color ampPink
    border-radius 50%
    img
        width 12px
        transform rotate(90deg)