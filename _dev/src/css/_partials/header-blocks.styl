/* Top of the page header blocks */

/* Header 1 */
.header-1
    width 100%
    min-height 700px
    height calc(100vh - 13em)
    margin-top -165px
    position relative
    z-index -99
    overflow hidden
    background darkGrey

    #header-image
        position absolute
        height calc(100vh - 13em)
        min-width 100%
        min-height 700px

@media screen and (max-width: breakpoint1200)
    .header-1, #header-image
        min-height 400px


/* scroll down button */
.scroll-down-button
    position absolute
    top -25px
    left calc(50% - 25px)
    display flex
    align-items center
    justify-content center
    width 50px
    height 50px
    background-color ampPink
    border-radius 50%
    img
        width 12px
        transform rotate(90deg)