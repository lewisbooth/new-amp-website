.bg
    background-color darkGrey
    background-repeat no-repeat
    background-size cover
    background-position center center
    position relative
    z-index -2

    &-overlay
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        background darkGrey
        z-index -1
        opacity 0.8


