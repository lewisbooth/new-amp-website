nav
    .sticky-nav
        width 100%
        top 0
        background-color darkGrey
        position fixed
        z-index 99

        .container
            height 50px
            display flex
            justify-content space-between
            align-items center

        &-logo
            width 75px

        &-list
            display inline-flex

            li
                margin-left 45px
        
        &-animation
            transform translateY(-50%)
            opacity 0
            transition all .3s ease-out

        &-animation.active
            transform translateY(0)
            opacity 1

        &-contact
            display inline-flex

            li
                margin-left 45px

    .main-nav
        width 100%
        margin-top 50px
        position relative
        z-index 10

        &-bg
            position absolute
            width 100%
            height 100%
            background lightGrey
            z-index -2

        .container
            height 115px
            display flex
            justify-content space-between
            align-items center

        &-col
            display flex

        &-list
            display inline-flex
            
            li
                margin-left 50px
                display block

    .faded
        color #929292

    li.end
        margin-left 0 !important

.mobile-menu
    display none


/* Navigation media queries */
@media screen and (max-width: breakpoint1200)

    nav

        .sticky-nav

            &-logo
                width 60px

            &-list

                li
                    margin-left 30px

            &-contact

                li
                    margin-left 30px

        .main-nav

            &-list

                li
                    margin-left 30px


@media screen and (max-width: breakpoint960)

    nav

        .main-nav
            margin-top 0

        .sticky-nav
            position relative

            .container
                justify-content flex-end
            
            &-logo, &-list
                display none


@media screen and (breakpoint800)

    nav

        .main-nav
            
            .container
                height 80px

            &-logo
                max-width 80px


@media screen and (max-width: breakpoint600)

    body, html
        overflow-x hidden

    nav

        .sticky-nav

            .container
                height 40px

        .main-nav
            position relative
            
            .container
                height 60px
                padding-right 0

            &-logo

                img 
                    max-width 85px

            &-list
                width 100%
                position absolute
                right 0
                bottom 0
                transform translateY(100%)
                background darkGrey
                justify-content center
                opacity 0
                transition all .3s ease-out
                z-index -1
                visibility hidden

                &.active
                    opacity 1
                    z-index 99
                    visibility visible

                &.active li
                    opacity 1
                    transform translateX(0)

                li
                    margin-left 0
                    border-bottom 1px solid rgb(45, 45, 45)
                    opacity 0
                    transition all .3s ease-out
                    transform translateX(50%)
                
                a   
                    color #ffffff
                    display block
                    padding 2rem

            &-col
                flex-direction column
                width 50%
                border-left 1px solid rgb(45, 45, 45)

                :last-child
                    border-bottom none

    
    /* Mobile button */

    .mobile-menu
        height 60px
        width 60px
        display flex
        align-items center
        justify-content center
        cursor pointer
        transition all .3s ease-out
        touch-action manipulation

        &-button
            position relative
            display block
            width 18px
            height 3px
            background darkGrey
            transition all .3s ease-out

            &:before, &:after
                position absolute
                content ''
                width 100%
                background darkGrey
                transition all .3s ease-out

            &:before
                top -6px
                height 3px

            &:after
                top 6px
                height 3px

            .active:before, .active:after
                background #ffffff

    .mobile-menu.active
        background darkGrey
        transform scale(0.6)

        .mobile-menu-button

            &:before
                transform translateY(200%) rotate(45deg)
                background #ffffff

            &:after
                transform translateY(-200%) rotate(-45deg)
                background #ffffff



@media screen and (max-width: breakpoint375)

    nav

        .sticky-nav

            &-contact
                width 100%
                display flex
                justify-content space-between

                li
                    margin-left 0
