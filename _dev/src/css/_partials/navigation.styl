nav
    .sticky-nav
        width 100%
        top 0
        background-color darkGrey
        position fixed
        z-index 99

        .container
            height 50px
            display flex
            justify-content space-between
            align-items center

        &-logo
            width 75px

        &-list
            display inline-flex
            li
                margin-right 45px
            :last-child
                margin-right 0
        
        &-animation
            transform translateY(-50%)
            opacity 0
            transition all .2s ease-out

        &-animation.active
            transform translateY(0)
            opacity 1

        &-contact
            display inline-flex
            li
                margin-right 45px
            :last-child
                margin-right 0

    .main-nav
        width 100%
        margin-top 50px
        position relative

        &-bg
            position absolute
            width 100%
            height 100%
            background lightGrey
            z-index -2

        .container
            height 115px
            display flex
            justify-content space-between
            align-items center

        &-list
            display inline-flex
            li
                margin-right 50px
            :last-child
                margin-right 0